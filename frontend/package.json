{
  "name": "neoforge-frontend",
  "version": "0.1.0",
  "description": "NeoForge Frontend",
  "type": "module",
  "scripts": {
    "setup": "node scripts/setup-vendor.js",
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .js",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "npm run test:components && npm run test:coverage",
    "test:components": "web-test-runner \"tests/components/**/*.test.js\" --node-resolve",
    "test:coverage": "web-test-runner \"tests/components/**/*.test.js\" --node-resolve --coverage",
    "test:coverage:report": "web-test-runner \"tests/components/**/*.test.js\" --node-resolve --coverage --coverage-reporters html lcov clover",
    "test:watch": "web-test-runner \"tests/components/**/*.test.js\" --node-resolve --watch",
    "test:e2e": "playwright test tests/e2e",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" \"yarn storybook --ci\" \"wait-on tcp:6006 && yarn test-storybook\"",
    "test-visual": "yarn test-storybook --test-runner=./storybook/test-runner.js",
    "test-visual:update": "yarn test-visual --updateSnapshot",
    "test-visual:ci": "start-server-and-test storybook http://localhost:6006 test-visual"
  },
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-a11y": "^7.0.0",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/addon-interactions": "^7.0.0",
    "@storybook/addon-links": "^7.0.0",
    "@storybook/addon-storysource": "^7.0.0",
    "@storybook/addon-viewport": "^7.0.0",
    "@storybook/blocks": "^7.6.7",
    "@storybook/test": "^7.6.7",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/web-components": "^7.0.0",
    "@storybook/web-components-vite": "^7.0.0",
    "@web/dev-server": "^0.4.1",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-coverage-v8": "^0.8.0",
    "@web/test-runner-playwright": "^0.11.0",
    "@web/test-runner-visual-regression": "^0.9.0",
    "axe-playwright": "^1.2.3",
    "concurrently": "^8.0.1",
    "eslint": "^8.56.0",
    "jest-image-snapshot": "^6.1.0",
    "playwright": "^1.50.1",
    "prettier": "^3.2.5",
    "sharp": "^0.33.5",
    "start-server-and-test": "^2.0.0",
    "storybook": "^7.0.0",
    "storybook-addon-designs": "^7.0.0",
    "wait-on": "^7.0.1",
    "vite": "^4.0.0",
    "c8": "^8.0.1",
    "istanbul-reports": "^3.1.5",
    "nyc": "^15.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
