{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["component-registry"],
  "rules": {
    "component-registry/no-duplicate-components": "warn"
  },
  "settings": {
    "componentRegistry": {
      "registryPath": "./docs/COMPONENT_REGISTRY.md"
    }
  }
}
