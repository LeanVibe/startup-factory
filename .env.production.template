# Startup Factory Production Environment Variables
# Copy this file to .env.production and fill in your actual API keys
# DO NOT commit .env.production to version control

# API Keys (required)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# Production Configuration
NODE_ENV=production
STARTUP_FACTORY_ENV=production

# Database (if needed for future features)
# DATABASE_URL=postgresql://user:password@localhost:5432/startup_factory

# Monitoring and Logging
LOG_LEVEL=INFO
METRICS_ENABLED=true
COST_ALERTS_ENABLED=true

# Security Settings
SESSION_SECRET=your-secure-session-secret-here
JWT_SECRET=your-secure-jwt-secret-here

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10

# Email Notifications (optional)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=notifications@yourstartupfactory.com
# SMTP_PASS=your-smtp-password
# FROM_EMAIL=notifications@yourstartupfactory.com

# Webhook Endpoints (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Performance Tuning
MAX_CONCURRENT_PROJECTS=10
PROJECT_TIMEOUT_HOURS=24
CLEANUP_INTERVAL_HOURS=6